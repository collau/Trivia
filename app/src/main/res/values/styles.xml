<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorActionBar</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textStyleTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="styleButton">
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_margin">@dimen/margin_button</item>
        <item name="android:background">#6D101326</item>
        <item name="android:padding">@dimen/padding_button</item>
        <item name="android:textColor">@color/colorButtonText</item>
    </style>

</resources>